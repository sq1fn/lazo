<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    tools:context=".HomeFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">


     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal"
         android:background="@drawable/cuadro_de_texto"
         android:orientation="vertical"
         android:padding="24dp">

         <!-- para el nombre de usuario -->
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/titleName"
             android:layout_marginTop="10dp"
             android:text="Nombre"
             android:textColor="@color/black"
             android:textSize="20sp"
             android:textStyle="bold" />

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/titleUsername"
             android:text="nombredeusuario"
             android:textColor="@color/grey"
             android:textSize="18sp" />


         <!-- para el correo -->
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/titleCorreo"
             android:layout_marginTop="10dp"
             android:text="Correo"
             android:textColor="@color/black"
             android:textSize="20sp"
             android:textStyle="bold"/>

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/titleUserEmail"
             android:text="correo"
             android:textColor="@color/grey"
             android:textSize="18sp" />


         <!-- para el teléfono -->
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/titleTelefono"
             android:layout_marginTop="10dp"
             android:text="Teléfono"
             android:textColor="@color/black"
             android:textSize="20sp"
             android:textStyle="bold" />

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/titleUserCel"
             android:text="telefono"
             android:textColor="@color/grey"
             android:textSize="18sp" />

         <Button
             android:id="@+id/botoneditar"
             android:layout_width="match_parent"
             android:layout_height="60dp"
             android:layout_marginTop="30dp"
             android:backgroundTint="@color/lavender"
             android:text="Editar perfil"
             android:textSize="18sp"
             app:cornerRadius="20dp" />

    </LinearLayout>


    </androidx.cardview.widget.CardView>


</FrameLayout>